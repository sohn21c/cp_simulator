<?xml version="1.0"?>
<robot name="two_link">
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="white">
    <color rgba="0.8 0.8 0.8 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
  </link>

  <link name="upper_arm">
    <visual>
      <geometry>
        <cylinder length="0.3" radius="0.01"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_to_upper_arm" type="continuous">
    <parent link="base_link"/>
    <child link="upper_arm"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0.0 0 0"/>
  </joint>  

  <link name="elbow">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="upper_to_elbow" type="revolute">
    <limit lower="-2.5"
         upper="0.0"
         effort="10.0"
         velocity="5.0" />
    <parent link="upper_arm"/>
    <child link="elbow"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0.15 0 0"/>
  </joint>

  <link name="lower_arm">
    <visual>
      <geometry>
        <cylinder length="0.3" radius="0.01"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="red"/>
    </visual>
  </link>

  <joint name="elbow_to_lower" type="fixed">
    <!-- <limit lower="0.0"
         upper="1.0"
         effort="10.0"
         velocity="5.0" /> -->
    <parent link="elbow"/>
    <child link="lower_arm"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0.15 0 0"/>
  </joint>
</robot>
